<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            width: 240px;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            background: white;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            padding-top: 80px;
            z-index: 1000;
        }

        .sidebar .nav-link {
            color: #333;
            font-weight: 500;
            padding: 15px 20px;
        }

        .sidebar .nav-link.active {
            background-color: #f0f0f0;
            color: #007bff;
        }

        .topbar {
            position: fixed;
            top: 0;
            left: 240px;
            right: 0;
            height: 70px;
            background: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            z-index: 999;
        }

        .content {
            margin-left: 240px;
            padding: 100px 30px 30px;
        }

        .card-box {
            padding: 30px;
            border-radius: 12px;
            color: white;
            text-align: center;
            transition: all 0.3s ease;
        }

        .card-box i {
            font-size: 2rem;
        }

        .card-box p {
            margin: 10px 0 0;
            font-size: 1.2rem;
        }
    </style>
</head>

<body>
    <%- include('../partials/header') %>

        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column position-fixed">
            <div class="text-center mb-4">
                <div class="mt-3 mb-2">
                    <!-- Logo or icon here -->
                </div>
            </div>
            <a href="/admin/dashboard" class="nav-link active"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a>
            <a href="/admin/users" class="nav-link"><i class="bi bi-people me-2"></i> Users</a>
            <!-- <a href="/admin/blogs" class="nav-link"><i class="bi bi-file-earmark-text me-2"></i> Blogs</a> -->
        </div>

        <!-- Topbar -->
        <div class="topbar">
            <div>
                <i class="bi bi-person-circle fs-4 me-2"></i> Admin
            </div>
        </div>

        <!-- Main Content -->
        <div class="content">
            <h3 class="mb-4">Overview</h3>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="card-box bg-primary">
                        <i class="bi bi-people-fill"></i>
                        <h2>
                            <%= usersCount || 0 %>
                        </h2>
                        <p>Total Users</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-box text-black border border-primary border-2">
                        <i class="bi bi-journals"></i>
                        <h2>
                            <%= blogsCount || 0 %>
                        </h2>
                        <p>Total Blogs</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-box bg-primary">
                        <i class="bi bi-chat-dots-fill"></i>
                        <h2>
                            <%= commentsCount || 0 %>
                        </h2>
                        <p>Total Comments</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-box text-dark border border-primary border-2">
                        <i class="bi bi-eye-fill"></i>
                        <h2>
                            <%= viewsCount || 0 %>
                        </h2>
                        <p>Total Views</p>
                    </div>
                </div>
            </div>

            <hr class="my-5">

            <!-- All Blogs Section -->
            <h4 class="mb-3">All Blogs</h4>
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Status</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (blogs && blogs.length> 0) { %>
                            <% blogs.forEach(blog=> { %>
                                <tr>
                                    <td>
                                        <%= blog.title %>
                                    </td>
                                    <td>
                                        <%= blog.author?.name || 'N/A' %>
                                    </td>
                                    <td>
                                        <span
                                            class="badge <%= blog.status === 'published' ? 'bg-success' : 'bg-warning text-dark' %>">
                                            <%= blog.status %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/admin/blogs/<%= blog._id %>" class="btn btn-sm btn-outline-primary">
                                            View
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center">No blogs found.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Pending Blogs Section -->
            <h4 class="mt-5 mb-3">Pending Blogs for Approval</h4>
            <ul class="list-group">
                <% if (pendingBlogs && pendingBlogs.length> 0) { %>
                    <% pendingBlogs.forEach(blog=> { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="/admin/blogs/<%= blog._id %>" class="text-decoration-none">
                                <%= blog.title %>
                            </a>
                            <span class="badge bg-warning text-dark">Pending</span>
                        </li>
                        <% }) %>
                            <% } else { %>
                                <li class="list-group-item text-muted">No pending blogs</li>
                                <% } %>
            </ul>

            <footer class="text-center mt-5">
                <p class="text-muted mb-0">Copyright Â© 2025 TechVerse. All rights reserved.</p>
            </footer>
        </div>

        <%- include('../partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>