<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TechVerse</title>
    <!-- <link rel="stylesheet" href="/path/to/bootstrap.css"> -->
    <!-- <link rel="stylesheet" href="/path/to/custom.css"> -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <!-- or for PNG -->
    <!-- <link rel="icon" type="image/png" href="/favicon.png"> -->
</head>

<body>
    <header class="bg-white shadow-sm sticky-top">
        <nav class="navbar navbar-expand-lg container py-3">
            <a class="navbar-brand fw-bold text-primary fs-3" href="/">TechVerse</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Left Nav -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link fw-medium" href="/">Home</a>
                    </li>
                    <% if (user?.role==='admin' ) { %>
                        <!-- <li class="nav-item">
                            <a class="nav-link fw-medium text-danger" href="/admin/dashboard">Admin Dashboard</a>
                        </li> -->
                        <% } %>
                </ul>

                <!-- Right Nav -->
                <ul class="navbar-nav ms-auto align-items-center gap-2">
                    <% if (user) { %>
                        <li class="nav-item">
                            <a href="/blogs/create" class="btn btn-outline-primary btn-sm rounded-pill">
                                <i class="bi bi-pencil-square me-1"></i> Write
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button"
                                data-bs-toggle="dropdown">
                                <img src="<%= user.profilePicture.startsWith('/uploads/') ? user.profilePicture : '/uploads/profile/' + user.profilePicture %>"
                                    alt="User" class="rounded-circle" width="40" height= "40"onerror="this.onerror=null; this.src='/images/default-avatar.png'">
                           
                                <span>
                                    <%= user.name %>
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/users/<%= user._id %>/dashboard">Dashboard</a></li>
                                <li><a class="dropdown-item" href="/users/<%= user._id %>/edit">Edit Profile</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item text-danger" href="/auth/logout">Logout</a></li>
                            </ul>
                        </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary btn-sm rounded-pill" href="/auth/login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm rounded-pill" href="/auth/register">Register</a>
                            </li>
                            <% } %>
                </ul>
            </div>
        </nav>
    </header>

    <!-- <script src="/path/to/bootstrap.bundle.js"></script> -->
    <!-- <script src="/path/to/custom.js"></script> -->
</body>

</html>