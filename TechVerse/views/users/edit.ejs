<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <style>
        .form-section {
            background: #fff;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .profile-img-preview {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #dee2e6;
            margin-bottom: 1rem;
        }

        .form-label {
            font-weight: 500;
        }
    </style>
</head>

<body>
    <%- include('../partials/header') %>

        <div class="container my-5">
            <div class="form-section mx-auto" style="max-width: 700px;">
                <h2 class="mb-4 text-center">Edit Profile</h2>

                <form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <!-- Name -->
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" id="name" name="name" class="form-control" value="<%= user.name %>"
                                required />
                        </div>

                        <!-- Email -->
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>"
                                required />
                        </div>
                    </div>

                    <!-- Profile Picture -->
                    <div class="mb-4">
                        <label for="profilePicture" class="form-label">Profile Picture</label><br />
                        <% if (user.profilePicture) { %>
                            <img src="<%= user.profilePicture.startsWith('/uploads/') ? user.profilePicture : '/uploads/profile/' + user.profilePicture %>"
                                alt="User" class="rounded" width="200" onerror="this.onerror=null; this.src='/images/default-avatar.png'">

                            <% } %>
                                <input class="form-control mt-2" type="file" id="profilePicture"
                                    name="profilePicture" />
                    </div>

                    <!-- Password Update -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="password" class="form-label">New Password</label>
                            <input type="password" id="password" name="password" class="form-control"
                                placeholder="Leave blank to keep current" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="confirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" />
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Update Profile</button>
                    </div>
                </form>
            </div>
        </div>

        <%- include('../partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>